{
    "name": "capstone/martial-arts-school",
    "description": "Martial Arts School Management System",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=7.4",
        "ext-mysqli": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-zip": "*",
        "ext-xml": "*",
        "ext-json": "*",
        "phpmailer/phpmailer": "^6.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Capstone\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Capstone\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-verbose": "phpunit --verbose",
        "post-install-cmd": [
            "@php -r \"if (file_exists('PHPMailer-master')) { echo 'Note: PHPMailer-master folder exists. Consider removing it and using Composer version instead.\\n'; }\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

